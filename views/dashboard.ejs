<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- including css -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- bootstrap Js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</head>

<body>

    <nav class="navbar navbar-light bg-light" id="navbar-settings-dashboard">
        <div id="navbar-items">
            <a class="navbar-brand" href="#">
            <img src="/images/sun.png" width="30" height="30" class="d-inline-block align-top" alt="">
            MAUSAM.com
            </a>
        </div>
    </nav>

    <div class="dashboard-welcome">
        <p class="hidden-user"><%= actualUser %></p>
        <h1 class="username-text">Hi <%= userName %></h1>
        <h3 class="welcome-text">Welcome Back!</h3>
    </div>

    <div class="home-weather">

    </div>

    <div class="favourites-weather">

        <div class="info-box">
            <% foundItems.forEach(function(foundItem){ %>
        
            <form action="/delete" method="POST">
        
                <div class="item">
                    <input type="hidden" name="userName" value="<%= actualUser %>">
                    <input type="checkbox" value="<%= foundItem %>" name="checkbox" onchange="this.form.submit()">

                    <div>
                        <h1 class="each-item"> <%= foundItem %> </h1>
                        <h1 class="temp-item"><%= temp %></h1>
                        <img class="img-item" src="#">
                    </div>
                    
                    <div>
                        <p class="feels-item"><%= feels %></p>
                    </div>
                    
                </div>
        
            </form>
        
            <% }); %>
        
            <form class="item" action="/add" method="POST">
                <input type="text" name="newItem" placeholder="New Place" autocomplete="off">
                <input type="hidden" name="userName" value="<%= actualUser %>">
                <button class="add-button" type="submit">+</button>
            </form>
        
        </div> 

    </div>

    <%- include("partials/footer"); -%>